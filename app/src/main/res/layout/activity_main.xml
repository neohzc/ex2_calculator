<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground1"
    android:orientation="vertical"
    tools:context="com.example.neoh.ex2_calculator.MainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:background="@color/colorBackground2">

        <Switch
            android:id="@+id/swtMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="" />

        <TextView
            android:id="@+id/tv_Show"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/swtMode"
            android:ems="10"
            android:gravity="bottom|right"
            android:textSize="40sp"
            android:textColor="@color/colorText"
            android:text="0" />


    </RelativeLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="1dp"
        android:layout_marginRight="1dp"
        android:layout_weight="9"
        android:background="@color/colorBackground3"
        android:columnCount="4"
        android:rowCount="4">

        <Button
            android:id="@+id/bt_AC"
            style="@style/MyButtonStyle"
            android:text="AC"
            android:textColor="@color/colorAlarm" />

        <Button
            android:id="@+id/bt_Del"
            style="@style/MyButtonStyle"
            android:text="DEL" />

        <Button
            android:id="@+id/bt_Div"
            style="@style/MyButtonStyle"
            android:text="รท" />

        <Button
            android:id="@+id/bt_Mul"
            style="@style/MyButtonStyle"
            android:text="ร" />

        <Button
            android:id="@+id/bt_7"
            style="@style/MyButtonStyle"
            android:text="7" />

        <Button
            android:id="@+id/bt_8"
            style="@style/MyButtonStyle"
            android:text="8" />

        <Button
            android:id="@+id/bt_9"
            style="@style/MyButtonStyle"
            android:text="9" />

        <Button
            android:id="@+id/bt_Sub"
            style="@style/MyButtonStyle"
            android:text="-" />

        <Button
            android:id="@+id/bt_4"
            style="@style/MyButtonStyle"
            android:text="4" />

        <Button
            android:id="@+id/bt_5"
            style="@style/MyButtonStyle"
            android:text="5" />

        <Button
            android:id="@+id/bt_6"
            style="@style/MyButtonStyle"
            android:text="6" />

        <Button
            android:id="@+id/bt_Add"
            style="@style/MyButtonStyle"
            android:text="+" />

        <Button
            android:id="@+id/bt_1"
            style="@style/MyButtonStyle"
            android:text="1" />

        <Button
            android:id="@+id/bt_2"
            style="@style/MyButtonStyle"
            android:text="2" />

        <Button
            android:id="@+id/bt_3"
            style="@style/MyButtonStyle"
            android:text="3" />

        <Button
            android:id="@+id/bt_Eql"
            style="@style/MyButtonStyle"
            android:layout_rowSpan="2"
            android:background="@color/colorAlarm"
            android:text="="
            android:textColor="@color/colorButton" />

        <Button
            android:id="@+id/bt_Psd"
            style="@style/MyButtonStyle"
            android:text="%" />

        <Button
            android:id="@+id/bt_0"
            style="@style/MyButtonStyle"
            android:text="0" />

        <Button
            android:id="@+id/bt_Dot"
            style="@style/MyButtonStyle"
            android:text="." />


    </GridLayout>
</LinearLayout>
